<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show! </title>
</head>
<body>
    <h2>Registros</h2>

    <table border="1">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(details) { %>
                <tr>
                    <td> <%= details.nome %></td>
                    <td> <%= details.sobrenome %></td>
                    <td>
                        <a href="/edit/<%= details._id %>">
                            Editar
                        </a>
                        <a href="/delete/<%= details._id %>">
                            Deletar
                        </a>
                    </td>
                </tr>
           <% }) %>
        </tbody>
    </table>
    <button>
        <a href="/">Novo</a>
    </button>
</body>
</html>